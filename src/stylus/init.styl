body {
  font-family: 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', '微软雅黑', Arial, sans-serif;
  font-size: 14px;
  color: #303133;
  margin: 0 auto;
  max-width: 750px;
}

.f-l {
  float: left;
}

.f-r {
  float: right;
}

:focus {
  outline: none;
}

li {
  list-style: none;
}

p, ul, pre, h2, h1, h3 {
  margin: 0;
  padding: 0;
}

pre {
  word-wrap: break-word;
  word-break: break-all;
  white-space: pre-wrap;
}

img {
  border: none;
  outline: none;
}

a {
  text-decoration: none;
  color: inherit;

  &:focus {
    outline: none;
  }
}

.clearfix {
  zoom: 1;

  &:after {
    content: '';
    clear: both;
    height: 0;
    line-height: 0;
    display: block;
    visibility: hidden;
  }
}

.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.align-center {
  text-align: center;
}

.pointer {
  cursor: pointer;
}

.theme-color {
  color: $theme-color !important;
}

.body-hidden {
  overflow: hidden;
}

.center-content {
  middle-content();
}